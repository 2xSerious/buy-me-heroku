<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Product Page</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/libs/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="d-flex flex-column min-vh-100">
    <div class="header row gx-0 px-md-5 px-4 py-2" id="add-to-cart">
      <div class="header__basket col d-flex justify-content-start">
        <div class="notification">1</div>
        <div class="header__basket--logo"></div>
        <div class="cart__dropdown"></div>
      </div>

      <div class="header__logo col">
        <a href="/">Buy<span>Me</span></a>
      </div>
      <div class="col"></div>
    </div>

    <div class="container mt-5">
      <div class="product">
        <div
          class="
            product__header
            d-flex
            flex-column
            justify-content-center
            align-items-center
          "
        >
          <div class="product__name px-5" id="t-shirt">
            <h3>
              <%= product_name%>
              <span class="product__color--text"><%=product_color %></span>
            </h3>
          </div>
          <div class="product__id px-5">ID: <span><%=product_id %></span></div>
        </div>

        <div
          class="
            product__details
            row
            d-flex
            flex-column flex-md-row
            justify-content-around
            gap-5
            mb-5
            m-auto
          "
        >
          <div class="container__left col d-flex justify-content-center">
            <div class="carousel">
              <div class="row row-cols-3 g-0">
                <div class="div-prev col d-flex justify-content-center">
                  <a class="prev">&#10094;</a>
                </div>
                <div class="col m-auto">
                  <img
                    class="img-current"
                    src="https://ik.imagekit.io/hjw31phthq4/e-shop/images/gallery/t-shirt-1-<%=product_color%>.jpeg"
                    alt="t-shirt"
                  />
                </div>

                <div class="div-next col d-flex justify-content-center">
                  <a class="next">&#10095;</a>
                </div>
              </div>
              <div class="tumbnails d-flex justify-content-center gap-3 mt-2">
                <img
                  class="thumb-img selected"
                  src="https://ik.imagekit.io/hjw31phthq4/e-shop/images/gallery/t-shirt-1-<%=product_color%>.jpeg"
                  alt="t-shirt"
                  ;
                />
                <img
                  class="thumb-img"
                  src="https://ik.imagekit.io/hjw31phthq4/e-shop/images/gallery/t-shirt-2-<%=product_color%>.jpeg"
                  alt="t-shirt"
                  ;
                />
                <img
                  class="thumb-img"
                  src="https://ik.imagekit.io/hjw31phthq4/e-shop/images/gallery/t-shirt-3-<%=product_color%>.jpeg"
                  alt="t-shirt"
                  ;
                />
              </div>
            </div>
          </div>

          <div
            class="
              container__right
              col
              d-flex
              flex-column
              justify-content-center
            "
          >
            <div class="product__size my-5">
              <h4>Size: True to fit</h4>
              <div class="product__select">
                <select class="form-select" id="select-size ">
                  <option value="" selected>Select Size</option>
                  <% product_sizes.forEach(function(size) { %>
                  <option value="<%=size.name%>"><%=size.name%></option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="product__color d-flex gap-1 selected-color">
              <div class="white"></div>
              <div class="black"></div>
              <div class="red"></div>
            </div>
            <div class="product__price">
              <h5>Price: <span class="cost">$40</span></h5>
            </div>
            <div class="product__availability">
              <p></p>
            </div>
            <div>
              <button id="add" class="btn btn-dark" onclick="addToCart()">
                Add to cart
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="footer mt-auto">
      <div
        class="footer__links d-flex justify-content-center align-items-center"
      >
        <a href="#t-shirt" class="footer-links">T-shirt</a>
        <div class="line"></div>
        <a href="#add-to-cart" class="footer-links">Add to cart</a>
        <div class="line"></div>
        <a href="#images" class="footer-links">Images</a>
      </div>
    </div>
    <script src="/libs/js/jquery-3.6.0.min.js"></script>
    <script src="/libs/js/script.js" async defer></script>
  </body>
</html>
